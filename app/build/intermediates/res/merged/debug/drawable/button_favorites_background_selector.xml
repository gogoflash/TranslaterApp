<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#ffee00"/>
                    <corners android:bottomRightRadius="8dip"
                        android:bottomLeftRadius="8dip"
                        android:topLeftRadius="8dip"
                        android:topRightRadius="8dip"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_favorite_black_24dp"
                android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp"/>
        </layer-list>
    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <solid android:color="#cecece"/>
                    <corners android:bottomRightRadius="8dip"
                        android:bottomLeftRadius="8dip"
                        android:topLeftRadius="8dip"
                        android:topRightRadius="8dip"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_favorite_white_24dp"
                android:left="5dp" android:right="5dp" android:top="5dp" android:bottom="5dp"/>
        </layer-list>
    </item>

</selector>